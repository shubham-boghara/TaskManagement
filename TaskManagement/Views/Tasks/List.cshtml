
@{
    ViewData["Title"] = "List";
}


<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                Tasks List
            </div>
            <div class="card-body table-responsive">
                <table id="tasksTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Due Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tasksTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/api/Tasks/AllList",
                    "type": "POST"
 
                },
                "columns": [
                    { "data": "Title" },
                    { "data": "Status" },
                    { "data": "Priority" },
                    { "data": "DueDate" },// DueDate column
                    {
                        data: null,
                        title: 'Actions',
                        orderable: false,
                        searchable: false,
                        render: function (data, type, row) {
                            return `
                                            <a href="/Tasks/Details/${row.TaskId}" class="btn btn-sm btn-primary me-2">Edit</a>
                                                            <button class="btn btn-sm btn-danger" onclick="deleteTask('${row.TaskId}')">Remove</button>`;
                        }
                    }
                ]
            });
        });



        function deleteTask(id) {
            ajaxCrud('DELETE', '/api/tasks/remove/' + `${id}`, null, function (response) {

                $('#tasksTable').DataTable().ajax.reload();
                
            }, function (xhr, status, error) {
                
            });
        }
    </script>
}